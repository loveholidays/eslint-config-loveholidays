{
  "include": [".*.js", "**/*.js", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "esnext",
    "target": "es2019",
    "moduleResolution": "node",

    "jsx": "react",
    "allowJs": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,

    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true
  }
}
