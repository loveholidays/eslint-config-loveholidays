{
  "compilerOptions": {
    "jsx": "react",
    "module": "esnext",
    "target": "es2019",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./test",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "outDir":"dist",
  },
  "typeRoots": [
    "node_modules/@types",
  ],
  "include": [
    "test/**/*.ts",
    "test/**/*.tsx",
  ],
  "exclude": [
    "node_modules",
  ]
}
